{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/ashlar/master/nextflow_schema.json",
    "title": "nf-core/ashlar pipeline parameters",
    "description": "Test workflow for the ASHLAR module",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "input/output options",
            "type": "object",
            "fa_icon": "fas fa-file-import",
            "description": "Define where the pipeline should find input data data and save data.",
            "help_text": "These options define the input and output parameters in the nextflow.config file.",
            "required": ["input"],
            "properties": {
                "input": {
                    "type": "string",
                    "description": "Path to input samplesheet",
                    "schema": "schema_file.json"
                }
            }
        },
        "cli_options": {
            "title": "cli options",
            "type": "object",
            "description": "options typically supplied at the command line",
            "properties": {
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "output directory",
                    "default": null
                },
                "help": {
                    "type": "boolean",
                    "description": "view usage information"
                },
                "validate_params": {
                    "type": "boolean",
                    "description": "validate input parameters"
                }
            }
        },
        "legacy_options": {
            "title": "legacy options",
            "type": "object",
            "description": "workaround(s) that will soon be fixed in code",
            "properties": {
                "singularity_pull_docker_container": {
                    "type": "string",
                    "description": "workaround(s) that will soon be fixed in code",
                    "hidden": true
                },
                "test_data_base": {
                    "type": "string",
                    "description": "URL for database containing test data files",
                    "default": null,
                    "hidden": true
                },
                "test_data": {
                    "type": "string",
                    "description": "JSON string containing URLs for each individual test data file",
                    "default": null,
                    "hidden": true
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/cli_options"
        },
        {
            "$ref": "#/definitions/legacy_options"
        }
    ]
}
